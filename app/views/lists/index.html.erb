<% title "Lists" %>

<% for list in @lists %>
<p>
    <%= link_to list.name, list %>
    <%= link_to "Edit", edit_list_path(list) %>
    <%= link_to "Destroy", list, :confirm => 'Are you sure?', :method => :delete %>
    <br />
    <ul>
        <% for inv in list.invitations %>
        <li><%= h inv.guest.username %> <span class="email">(<%= h inv.guest.email %>)</span></li>
        <% end %>
    </ul>
</p>
<% end %>

<p><%= link_to "New List", new_list_path %></p>
